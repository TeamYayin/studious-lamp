<html>
<head>
    <title>Create Event</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
        <h1 class="text-4xl text-center">Create Event</h1>

        <form method="POST" action="/events">
            <div class="py-3">
                <label for="name">Event Name:</label>
                <input class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" type="text" id="name" name="name" required><br>
            </div>

            <div class="py-3">
                <label for="date">Event Date:</label>
                <input class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" type="date" id="date" name="date" required><br>
            </div>
            
            <div class="py-3">
                <label for="description">Event Description:</label>
                <textarea class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" id="description" name="description"></textarea><br>
            </div>

            <div class="py-3">
                <label for="location">Event Location:</label>
                <input class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" type="text" id="location" name="location"><br>
            </div>

            <div class="py-3">
                <label for="year">Event Year:</label>
                <input class="border border-gray-300 rounded text-gray-900 w-full p-2 text-sm" type="number" id="year" name="year" required><br>
            </div>
 
            <div class="py-3">
                <button type="submit" class="bg-green-500 text-black rounded px-5 py-2 font-medium mr-2 mb-2 hover:bg-green-800 text-white">Create Event</button>
            </div>
        </form>
    </div>
    </div>
</body>
</html>
